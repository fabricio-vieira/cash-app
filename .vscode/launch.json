    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach Nest (monorepo)",
            "port": 9229,
            "cwd": "${workspaceFolder}",
            "restart": true,
            "smartStep": true,
            "skipFiles": ["<node_internals>/**"],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js",
                "${workspaceFolder}/**/dist/**/*.js",
                "${workspaceFolder}/apps/**/dist/**/*.js",
                "${workspaceFolder}/packages/**/dist/**/*.js"
            ],
            "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
        }
    ]
}
